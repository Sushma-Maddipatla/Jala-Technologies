public class Main
{
	public static void main(String[] args) {
		String t = "Java is fun";
		String s1= "JAVA";
		String s2= "Java";
		String s3 = "  Hello Java  ";
		
		System.out.println("Char at index 2(third position): " + t.charAt(2));
		System.out.println("After Concat: "+ t.concat("-Enjoy-"));
		System.out.println("Checking equals ignoring case: " +s2.equalsIgnoreCase(s1));
		System.out.println("Checking equals with case: " +s2.equals(s1));
		System.out.println("Checking Length: "+ t.length());
		System.out.println("Replace function: "+ t.replace("fun", "easy"));
		System.out.println("SubString of t: "+ t.substring(8));
		System.out.println("SubString of t: "+ t.substring(2,8));
		System.out.println("to lower: "+ t.toLowerCase());
		System.out.println("to upper: "+ t.toUpperCase());
		System.out.println("Triming string: " + s3.trim());
		System.out.println("searching s1 in t: " + t.contains(s1));
		System.out.println("searching s2 in t: " + t.contains(s2));
		char [] charArray = s2.toCharArray();
		System.out.println("Size of char array: " + charArray.length);
		System.out.println("Printing last element of array: " + charArray[3]);
	}
}
